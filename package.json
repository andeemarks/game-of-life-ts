{
  "name": "game-of-life",
  "version": "1.0.0",
  "description": "Typescript version of Comway's Game of Life simulation.",
  "author": "Andy Marks",
  "private": false,
  "main": "./lib/src/game-of-life.js",
  "license": "MIT",
  "bin": {
    "game-of-life": "./lib/src/game-of-life.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andeemarks/game-of-life-ts"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^27.2.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "test": "yarn lint:types && jest --no-cache",
    "lint": "yarn lint:types && yarn lint:ci",
    "lint:types": "yarn tsc --noEmit -p .",
    "lint:ci": "eslint . --ext .tsx,.ts",
    "create": "yarn build",
    "game": "yarn build && node lib/src/game-of-life.js",
    "build": "tsc -p ."
  },
  "dependencies": {
    "@types/clear": "^0.1.2",
    "@types/clui": "^0.3.1",
    "@types/figlet": "^1.5.4",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6"
  }
